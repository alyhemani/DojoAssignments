<h1>Welcome, Login or Register</h1>
<div id="login">
	<h1>Register</h1>
	<form action="/users" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div>
			<label>First Name:</label>
			<input type="text" name="user[first_name]">
		</div>
		<div>
			<label>Last Name:</label>
			<input type="text" name="user[last_name]">
		</div>
		<div>
			<label>Email:</label>
			<input type="text" name="user[email]">
		</div>
		<div>
			<label>Password:</label>
			<input type="password" name="user[password]">
		</div>
		<div>
			<label>Password Confirmation:</label>
			<input type="password" name="user[password_confirmation]">
		</div>
		<div>
			<input type="submit" value="Create User">
		</div>
	</form>
</div>
<div>
	<% if flash[:registration_errors] %>
		<% flash[:registration_errors].each do |error| %>
			<p class="error"><%= error %></p>
		<% end %>
	<% end %>
</div>
<div id="register">
	<h1>Login</h1>
	<form action="/sessions" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div>
			<label>Email:</label>
			<input type="text" name="login[email]">
		</div>
		<div>
			<label>Password:</label>
			<input type="password" name="login[password]">
		</div>
		<div>
			<input type="submit" value="Login">
		</div>
	</form>
</div>
<div>
	<% if flash[:login_errors] %>
		<% flash[:login_errors].each do |error| %>
			<p class="error"><%= error %></p>
		<% end %>
	<% end %>
</div>