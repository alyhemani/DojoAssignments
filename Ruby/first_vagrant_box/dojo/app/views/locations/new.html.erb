<h1>New Dojo</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>

<form action="/locations" method="post">
	<input name="authenticity_token" value="<%=form_authenticity_token %>" type="hidden">
	<div>
		<label>Branch:</label>
		<input type="text" name="location[branch]">
	</div>
	<div>
		<label>Street:</label>
		<input type="text" name="location[street]">
	</div>
	<div>
		<label>City:</label>
		<input type="text" name="location[city]">
	</div>
	<div>
		<label>State:</label>
		<input type="text" name="location[state]">
	</div>
	<div>
		<input type="submit" value="Create">
	</div>
</form>
<%= link_to "Go back", root_path %>